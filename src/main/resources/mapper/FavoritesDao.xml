<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leng.oldass.favorites.dao.FavoritesDao">

    <resultMap type="com.leng.oldass.favorites.entity.Favorites" id="FavoritesMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="creatTime" column="creat_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="FavoritesMap">
        select
          id, name, creat_time
        from favorites
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="FavoritesMap">
        select
          id, name, creat_time
        from favorites
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="creatTime != null">
                and creat_time = #{creatTime}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from favorites
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="creatTime != null">
                and creat_time = #{creatTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into favorites(name, creat_time)
        values (#{name}, #{creatTime})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into favorites(name, creat_time)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.creatTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into favorites(name, creat_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.creatTime})
        </foreach>
        on duplicate key update
        name = values(name),
        creat_time = values(creat_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update favorites
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="creatTime != null">
                creat_time = #{creatTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from favorites where id = #{id}
    </delete>

</mapper>

