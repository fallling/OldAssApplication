<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leng.oldass.dao.RoleDao">

    <resultMap type="com.leng.oldass.entity.Role" id="RoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="nameZh" column="nameZh" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RoleMap">
        select
          id, name, nameZh
        from role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RoleMap">
        select
          id, name, nameZh
        from role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="nameZh != null and nameZh != ''">
                and nameZh = #{nameZh}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="nameZh != null and nameZh != ''">
                and nameZh = #{nameZh}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into role(name, nameZh)
        values (#{name}, #{nameZh})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into role(name, nameZh)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.nameZh})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into role(name, nameZh)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.nameZh})
        </foreach>
        on duplicate key update
        name = values(name),
        nameZh = values(nameZh)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update role
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="nameZh != null and nameZh != ''">
                nameZh = #{nameZh},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from role where id = #{id}
    </delete>

</mapper>

